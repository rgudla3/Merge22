<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcomeScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEF09D"
    tools:context=".PointIncrement">

    <!-- Thank you for recycling today! -->

    <!-- globe image -->

    <View
        android:id="@+id/globe_image"
        android:layout_width="239dp"
        android:layout_height="254dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="171dp"
        android:background="@drawable/globe_image" />

    <TextView
        android:id="@+id/thank_you_f"
        android:layout_width="280dp"
        android:layout_height="105dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/patrick"
        android:gravity="center_horizontal|top"
        android:text="Thank you for recycling today!"
        android:textAppearance="@style/thank_you_f"
        android:textSize="32sp" />

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="185dp"
        android:layout_height="59dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="107dp"
        android:layout_marginTop="610dp"
        android:background="@drawable/rectangle_1" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="200dp"
        android:layout_height="135dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="432dp"
        android:fontFamily="@font/patrick"
        android:gravity="center_horizontal|center"
        android:text="+1"
        android:textAppearance="@style/some_id" />

    <!-- View points button -->

    <!-- Rectangle 10 -->

    <!-- View points -->
    <Button
        android:id="@+id/view_points_button"
        android:layout_width="185dp"
        android:layout_height="59dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="607dp"
        android:background="#00000000" />

    <TextView
        android:id="@+id/view_points"
        android:layout_width="132dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="615dp"
        android:fontFamily="@font/patrick"
        android:gravity="center_horizontal|top"
        android:text="View points"
        android:textAppearance="@style/view_points"
        android:textSize="32sp" />


</RelativeLayout>