<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcomeScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEF09D"
    tools:context=".Points">

    <!-- Rectangle 11 -->
    <View
        android:id="@+id/rectangle_11"
        android:layout_width="207dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="245dp"
        android:background="@drawable/rectangle_11" />

    <!-- Total Items Recycled -->
    <TextView
        android:id="@+id/total_items"
        android:layout_width="265dp"
        android:layout_height="141dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="61dp"
        android:fontFamily="@font/patrick"
        android:gravity="center_horizontal|top"
        android:text="Total Items Recycled"
        android:textAppearance="@style/total_items" />

    <!-- Home button -->
    <Button
        android:id="@+id/home_button"
        android:layout_width="180dp"
        android:layout_height="68dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="113dp"
        android:layout_marginTop="572dp"
        android:background="#00000000" />

    <!-- Rectangle 12 -->
    <View
        android:id="@+id/rectangle_12"
        android:layout_width="180dp"
        android:layout_height="68dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="575dp"
        android:background="@drawable/rectangle_1" />

    <!-- Home -->
    <TextView
        android:id="@+id/home"
        android:layout_width="178dp"
        android:layout_height="68dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="581dp"
        android:fontFamily="@font/patrick"
        android:gravity="center_horizontal|top"
        android:text="Home"
        android:textAppearance="@style/home" />

</RelativeLayout>
