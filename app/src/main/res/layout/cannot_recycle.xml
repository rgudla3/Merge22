<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cannotRecycle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEF09D">

    <!-- no x -->
    <View
        android:id="@+id/no_x"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="227dp"
        android:background="@drawable/no_circle" />

    <!-- This item is NOT recyclable -->


    <!-- Recycle another item -->

    <!--rectangle 8-->

    <TextView
        android:id="@+id/this_item_i"
        android:layout_width="304dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="86dp"
        android:fontFamily="@font/patrick"
        android:gravity="center_horizontal|top"
        android:text="This item is NOT recyclable"
        android:textAppearance="@style/is_not_recyclable" />

    <TextView
        android:id="@+id/recycle_ano"
        android:layout_width="260dp"
        android:layout_height="47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="522dp"
        android:fontFamily="@font/patrick"
        android:gravity="center_horizontal|top"
        android:text="Recycle another item"
        android:textAppearance="@style/recycle_ano"
        android:textSize="32sp" />

    <View
        android:id="@+id/rectangle_8"
        android:layout_width="155dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="609dp"
        android:background="@drawable/rectangle_8" />


    <!--return button-->
    <Button
        android:id="@+id/return_button"
        android:layout_width="155dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="606dp"
        android:background="#00000000" />

    <!--Return-->
    <TextView
        android:id="@+id/return_name"
        android:layout_width="153dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="611dp"
        android:fontFamily="@font/patrick"
        android:gravity="center_horizontal|top"
        android:text="Return"
        android:textAppearance="@style/return_name"
        android:textSize="32sp" />


</RelativeLayout>